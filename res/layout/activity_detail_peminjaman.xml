<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="o" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fbf9f7"
        android:orientation="horizontal"
        android:padding="7dip" >

        <ScrollView
            android:id="@+id/sv_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/ln_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="5dip"
                android:orientation="vertical"
                android:padding="3dip" >

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/niv_cover"
                    android:layout_width="175dip"
                    android:layout_height="150dip"
                    android:layout_gravity="center"                    
                    android:background="#fff"
                    android:src="@drawable/noimage" />

                <TextView
                    android:id="@+id/tv_id_transaksi"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tv_judul_buku"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp" />

                <TextView
                    android:id="@+id/tv_tgl_pinjam"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/tv_tgl_harus_kembali"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp" />

                <TextView
                    android:id="@+id/tv_status_peminjaman"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/tv_tgl_kembali"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp" />

                <TextView
                    android:id="@+id/tv_telat"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp" />

                <TextView
                    android:id="@+id/tv_denda"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</merge>